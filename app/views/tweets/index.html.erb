<%= render 'header' %>

<p id="notice"><%= notice %></p>

<h1>ツイートの一覧</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'ツイートを見る', tweet %></td>
        <td><%= link_to 'ツイートを編集する', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'ツイートを削除する', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいツイート', new_tweet_path %>
